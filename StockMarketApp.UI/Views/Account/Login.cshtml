@model LoginDTO
@{
	ViewBag.Title = "Login";
	ViewBag.CurrentUrl = "~/Account/Login";
}

<div class="breadcrumb">
	<span>Account</span>
	<i class="fa-solid fa-caret-right"></i>
	<span>Login</span>
</div>

<div class="auth-container">
	<div class="auth-card">
		<h2 class="auth-title"><i class="fa-solid fa-right-to-bracket"></i> Login</h2>
		<p class="auth-subtext">Not yet registered? <a asp-action="Register" asp-controller="Account" class="auth-link">Create an account</a></p>

		<form asp-controller="Account" asp-action="Login" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]" method="post">

			<div class="form-group">
				<label asp-for="Email" class="input-label"><i class="fa-solid fa-envelope"></i> Email</label>
				<input asp-for="Email" class="form-input" />
				<span asp-validation-for="Email" class="validation-text"></span>
			</div>

			<div class="form-group">
				<label asp-for="Password" class="input-label"><i class="fa-solid fa-lock"></i> Password</label>
				<input asp-for="Password" class="form-input" type="password" />
				<span asp-validation-for="Password" class="validation-text"></span>
			</div>

			<button type="submit" class="button button-blue-back w-100 mt-20">
				<i class="fa-solid fa-arrow-right-to-bracket"></i> Login
			</button>

			<div asp-validation-summary="All" class="validation-summary mt-10"></div>

			@if (ViewBag.Errors != null)
			{
				<div class="error-box mt-10">
					<ul>
						@foreach (string error in ViewBag.Errors)
						{
							<li>@error</li>
						}
					</ul>
				</div>
			}

		</form>
	</div>
</div>


