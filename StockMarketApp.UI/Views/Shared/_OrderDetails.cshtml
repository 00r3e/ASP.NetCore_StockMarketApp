
<div class="order-card">
    <div class="order-header">
        <span class="stock-name">@ViewBag.StockName</span>
        <span class="stock-symbol">(@ViewBag.StockSymbol)</span>
    </div>

    <div class="order-info">
        <p><strong>@ViewBag.Quantity</strong> shares at <strong>$@ViewBag.Price</strong></p>
        <p>Trade Amount: <strong>$@ViewBag.TradeAmount</strong></p>
        <p class="order-date">@ViewBag.DateAndTimeOfOrder</p>
    </div>
</div>

