@model Orders
@{
	Layout = null;
}

<link href="@("http://" + Context.Request.Host.ToString() + "/StyleSheet.css")" rel="stylesheet" />

<h1>Orders</h1>

<table class="table w-100 mt">
	<thead>
		<tr>
			<th>Date and Time</th>
			<th>Stock</th>
			<th>Order Type</th>
			<th>Quantity</th>
			<th>Price</th>
			<th>Trade Amount</th>
		</tr>
	</thead>
	<tbody>
		@foreach (SellOrderResponse sellOrder in Model.SellOrders)
		{
			<tr>
				<td style="width:15%">
					@sellOrder.DateAndTimeOfOrder
				</td>
				<td style="width:20%">
					@{
						string stock = sellOrder.StockName + " " + sellOrder.StockSymbol;
					}
					@stock
				</td>
				<td style="width:13%">
					SellOrder
				</td>
				<td style="width:9%">
					@sellOrder.Quantity
				</td>
				<td style="width:9%">
					@sellOrder.Price
				</td>
				<td style="width:10%">
					@sellOrder.TradeAmount
				</td>
			</tr>
		}
		@foreach (BuyOrderResponse buyOrder in Model.BuyOrders)
		{
			<tr>
				<td style="width:15%">
					@buyOrder.DateAndTimeOfOrder
				</td>
				<td style="width:20%">
					@{
						string stock = buyOrder.StockName + " " + buyOrder.StockSymbol;
					}
					@stock
				</td>
				<td style="width:13%">
					BuyOrder
				</td>
				<td style="width:9%">
					@buyOrder.Quantity
				</td>
				<td style="width:9%">
					@buyOrder.Price
				</td>
				<td style="width:10%">
					@buyOrder.TradeAmount
				</td>
			</tr>
		}

	</tbody>

</table>
